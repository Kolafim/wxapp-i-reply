view, text, navigator, icon, textarea, image, input, button {box-sizing:border-box}
input, textarea{position:relative;z-index:0}
input,textarea,image{height: auto;}
page {
    font-family: -apple-system,Microsoft YaHei,Helvetica Neue,Helvetica,sans-serif;
    background-color:#f7f7f7;
    height: 100%;
    font-size: 16px;
    color:#333;
}

@import "theme/common.wxss";
@import "theme/color.wxss";
@import "theme/animation.wxss";

.vertical{
  float:inherit;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-box-align: center;
    -webkit-box-pack: center;
    -webkit-box-direction: normal;

}

.arc-list:before, .arc-item:before, .arc-before:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #DADADA;
    color: #DADADA;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}


.btn-area {
    padding: 0 30px;
}
.btn-area button{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}


.icon-add {
    background-color:#bbb;
    position:relative;
    width:40px;
    height:40px;
    border-radius: 50%;
}
.icon-add:before {
    position: absolute;
    top:40%;
    left:17%;
    content:'';
    width:66%;
    height:20%;
    background-color:#fff;
}
.ico-remove-line, .ico-add-line, .ico-close-line {
    display: inline-block;
    position: relative;
}
.ico-remove-line:before, .ico-add-line:before, .ico-close-line:before {
    position: absolute;
    top: 50%;
    left: 50%;
    content: '';
    width: 17px;
    height: 0;
    border-top: 1px solid;
    margin-left: -9px;
    margin-top: -1px;
}
.ico-add-line:after, .ico-close-line:after {
    position: absolute;
    top: 50%;
    left: 50%;
    content: '';
    width: 1px;
    height: 17px;
    border-left: 1px solid;
    margin-top: -9px;
    margin-left: -1px;
}
