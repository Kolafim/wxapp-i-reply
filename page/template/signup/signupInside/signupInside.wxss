.signup-content .signup-main {
  margin:20rpx 0 50rpx
}
.signup-head .s-h-icon {
  width:74px;
}
.signup-input-cell{
  position:relative;
  margin:20rpx 0;
}
.signup-input-cell .signup-input {
  background-color: #ebebeb;
  border:none;
  padding:0 10px;
  width:100%;
  height:46px;
  line-height: 46px;
  color:#000;
  font-size:.95rem;
  border-radius:10rpx;
}
.signup-input-cell .placeholder {
  color:#000;
  font-size:.9em;
}
.signup-input-cell .l-i-c-right-clear {
  line-height: 14px;
  font-size: 30px;
  padding: 16px;
  font-weight: 100;
  color:#fff;
  position:absolute;
  right:0;
  top:0;
}
.signup-input-cell .l-i-c-right-reg-btn {
  height:46px;
  line-height: 46px;
  min-width:110px;
  margin-left:20rpx;
}

.signup-foot .signup-submit {
  height:50px;
  line-height:50px;
}
