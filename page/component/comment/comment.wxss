}
.send_out {
font-size:24rpx;
border-radius:10rpx 10rpx;
padding: 10rpx 20rpx;
}
.btn_out{
  color: #fff;
  font-size: 30rpx;
  padding:30rpx; 
  background-color:#da3838;
  border: none;
}
.send_out button{
   line-height: normal;
   
}
 .send_out::after{
  border: none;
} 
.btns_out{
    background-color:#d84e4e;
} 
.circle{
  
   -webkit-animation:circle 0.5s ease forwards ;/*匀速 循环*/
}
@-webkit-keyframes circle{
0%{ transform:translateY(200%); }
100%{ transform:translateY(0%); }
}
.circles{
   -webkit-animation:circles 0.5s ease forwards ;/*匀速 循环*/
}
@-webkit-keyframes circles{
0%{ transform:translateY(0%); }
100%{ transform:translateY(200%); }
}
