@import "../../../theme/common.wxss";
@import "../../../theme/color.wxss";
@import "../../../theme/animation.wxss";

.common-list {
  font-size: inherit;
}
.common-list .common-item {
  background-color: #fefefe;
  padding:10rpx 30rpx;
  margin:0 0 20rpx;
}
.common-list .common-item.isdetail {
  margin:0;
}
.common-list .common-item .follow {
  background-color: #a33737;
  color:#fff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 2px 0;
  min-width:130rpx;
  text-align: center;
  /* letter-spacing: .3em; */
}
.common-list .common-item .follow::before {
  content:'关 注';
  display: inline;
}
.common-list .common-item .follow.on {
  background-color: transparent;
  /* letter-spacing: 0; */
  color:#a33737;
  border:1px solid;
}
.common-list .common-item .follow.on::before {
  content:'已关注';
}
.common-list .common-item .c-i-head {
  /* margin:0 10rpx; */
  /* border-bottom:1rpx solid #dadada; */
  padding:10rpx 0;
  min-height:100rpx;
}
.common-list .common-item .c-i-h-pic {
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-right:20rpx;
}
.common-list .common-item .c-i-head .c-i-h-info {
  /* padding-left:120rpx; */
}
.common-list .common-item .c-i-head .c-i-h-info .c-i-h-i-slider {
  background-color: #ccc;
  height:12rpx;
  width:200rpx;
}
.common-list .common-item .c-i-head .c-i-h-info .c-i-h-i-slider view {
  height:100%;
  background-color: #555;
}
.common-list .common-item .c-i-head .c-i-h-info .c-i-h-time {
  font-size: 30rpx;
}
.common-list .common-item .c-i-main {
  padding:10rpx 0;
}
.common-list .common-item .c-i-main.left-padding-100 {
  padding-left:100rpx;
}
.common-list .common-item .c-i-main .comment-list-btn {
  background-color: #f3f3f3;
}
.common-list .common-item .c-i-foot-index {
  padding-right:34rpx;
}
.common-list .common-item .c-i-foot-index .icon-item {
  display: inline-block;
  margin-left: 34rpx;
  vertical-align: middle;
  line-height: 20px;
  font-size: 12px;
  color:#bbb;
}
.common-list .common-item .c-i-foot-index .icon-item image {
  width:15px;
  height:15px;
  margin-right:3px;
}
